package iptu_vv;
import java.util.ArrayList;

public class Municipio {

	 String nome;
	 ArrayList<Imovel> imoveis = new ArrayList<Imovel>();
	 
	 public void addMunicipio(String nome) {
		 this.nome = nome;
	 }
	 
	 public void addImovel(Imovel imovel) {
		 imoveis.add(imovel);
		 System.out.print("Quantidade de imÃ³veis em " + this.nome +  ": " + this.imoveis.size() + "\n");
	 }
	 
	    public void calcularImpostos(Imovel imovel) {
	    	
	    	float impostosCalculados = imovel.impostos;
	    	
	    	
	    	if(imovel.mesesAtraso == 0) {
	   	         System.out.print("Nenhuma multa a pagar!");
	         } else if(imovel.mesesAtraso > 0 && imovel.mesesAtraso <= 5 ) {
	        	 impostosCalculados *= 1.01 ;
	    	     System.out.print("Impostos com multa: " + impostosCalculados);
	    	 } else if(imovel.mesesAtraso >= 6 && imovel.mesesAtraso <= 8 ) {
	    		 impostosCalculados *= 1.023 ;
	       	     System.out.print("Impostos com multa: " + impostosCalculados);
	         } else if(imovel.mesesAtraso >= 9 && imovel.mesesAtraso <= 10 ) {
	        	 impostosCalculados *= 1.03 ;
	             System.out.print("Impostos com multa: " + impostosCalculados);
	     	 } else if(imovel.mesesAtraso >= 11 && imovel.mesesAtraso <= 12 ) {
	     		impostosCalculados *= 1.054 ;
	             System.out.print("Impostos com multa: " + impostosCalculados);
	         } else if(imovel.mesesAtraso >12 ) {
	        	 impostosCalculados *=  1.1 ;
	        	 System.out.print("Impostos com multa: " + impostosCalculados);
	     	 }
	          
	    }
	 
	 
}
